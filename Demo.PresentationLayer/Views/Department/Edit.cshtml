@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}
<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Department :@Model.Name</h1>
    <form method="post" asp-controller="Department" asp-action="Edit" class="col-8">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
   
        @* HERE *@
        <partial name="PartialView/CreateEditView" />

        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>


@section VallidationScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
