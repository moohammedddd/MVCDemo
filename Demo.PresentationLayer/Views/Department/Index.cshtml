
@model IEnumerable<DepartmentDto>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments </h1>
<a asp-controller ="Department" asp-action="Create" class="btn btn-primary my-3 ">Create Department </a>
@if(Model.Any()){
    <table class="table table-hover mt-2">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(Property => Property.Code)</th>
                <th>@Html.DisplayNameFor(Property => Property.Name)</th>
                <th>@Html.DisplayNameFor(Property => Property.Description)</th>
                <th>@Html.DisplayNameFor(Property => Property.DateOfCreation)</th>
                <th scope="col">Details</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                   
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.Description</td>
                    <td>@department.DateOfCreation</td>
                    <td>
                    <a class="btn btn-primary" asp-controller="Department" asp-action="Details" asp-route-Id="@department.DeptId">
                        <i class="fas fa-eye"></i> Details
                    </a>
                    </td>
                    <td>
                        <a class="btn btn-success" asp-controller="Department" asp-action="Edit" asp-route-Id="@department.DeptId">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-Id="@department.DeptId">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                   
                </tr>
            }

            
         
          
        </tbody>
    </table>
    

}
else{
        <div class="alert alert-info" role="alert">
            No departments found.
        </div>
}
